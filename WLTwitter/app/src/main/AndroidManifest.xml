<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="worldline.ssm.rd.ux.wltwitter" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".WLTwitterApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WLTwitterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WLTwitterLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- The content provider to manage Tweets in database -->
        <provider
            android:name="worldline.ssm.rd.ux.wltwitter.providers.WLTwitterDatabaseProvider"
            android:authorities="worldline.ssm.rd.ux.TweetAuthority"
            android:exported="false" />
    </application>

</manifest>
